{
  "name": "drift-toolkit",
  "version": "1.14.3",
  "description": "Detect when code or infrastructure drifts from your standards.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "drift-toolkit": "dist/cli.js",
    "drift": "dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./constants": {
      "import": "./dist/constants.js",
      "types": "./dist/constants.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "version": "changeset version",
    "prepublishOnly": "npm run build",
    "dashboard:dev": "npm run dev --prefix dashboard",
    "dashboard:build": "npm run build --prefix dashboard",
    "prepare": "husky"
  },
  "keywords": [
    "github",
    "drift",
    "compliance",
    "repository",
    "standards",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chrismlittle123/drift-toolkit.git"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.0.0",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "knip": "^5.82.0",
    "prettier": "^3.8.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "check-my-toolkit": "1.3.1",
    "commander": "^14.0.0",
    "glob": "^13.0.0",
    "minimatch": "^10.1.1",
    "smol-toml": "^1.6.0",
    "yaml": "^2.8.2",
    "zod": "^4.3.5"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
